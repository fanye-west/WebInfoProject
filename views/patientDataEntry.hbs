{{#with patient}}
<div class="main_page_body_under_navigation" id="patient_data_entry">
        <div class="outer_block_text_column" id="patient_data_entry_box">
            <div class="light_theme_colour_background" id="data_entry_page">

                <h2 class="data_entry_heading">Add today's records</h2>
                
                <form action='/user/patient/insertPatientData' method='post'>
                    <div class="data_entry_format_grid">
                        <div class="patient_data_grid">
                            <div class="outer_block_text_column" id="data_grid">
                                <div class="data_grid">
                                    <p class="data_entry_label">Blood Glucose Levels (mmol/L):</p>

                                    <label for="blood_glucose_value"></label>
                                    <input class="data_entry" type="text" name="blood_glucose_value" value="{{glucose_value}}" style="{{glucose_colour}}" {{glucose_readonly}} pattern="([0-9]*[.])?[0-9]+"></input>

                                    {{!-- <p class="data_entry_label" id="subheading">You have already filled this in for today</p> --}}
                                    <p class="data_entry_label" id="subheading">{{glucose_subheading}}</p>
                                </div>
                            
                            </div>

                            <div class="outer_block_text_column" id="data_grid">
                                <div class="data_grid">
                                    <p class="data_comment_label">Add comments for blood glucose levels</p>
                                    <label for="blood_glucose_comment"></label>
                                    <input class="data_comment" type="text" name="blood_glucose_comment" value="{{glucose_comment}}" {{glucose_readonly}}></input>
                                </div>
                            </div>

                            <div class="outer_block_text_column" id="data_grid">
                                <div class="data_grid">     
                                    <p class="data_entry_label">Weight (kg):</p>

                                    <label for="weight_value"></label>
                                    <input class="data_entry" id="white" type="text" name="weight_value" value="{{weight_value}}" style="{{weight_colour}}" {{weight_readonly}} pattern="([0-9]*[.])?[0-9]+"></input>
                                    
                                    {{!-- <p class="data_entry_label" id="subheading">You still need to fill this in for today</p> --}}
                                    <p class="data_entry_label" id="subheading">{{weight_subheading}}</p>
                                </div>
                            </div>

                            <div class="outer_block_text_column" id="data_grid">
                                <div class="data_grid">
                                    <p class="data_comment_label">Add comments for weight</p>
                                    <label for="weight_comment"></label>
                                    <input class="data_comment" type="text" name="weight_comment" value="{{weight_comment}}" {{weight_readonly}}></input>
                                    <div></div>
                                </div>
                            </div>

                            <div class="outer_block_text_column" id="data_grid">
                                <div class="data_grid">
                                    <p class="data_entry_label">Number of Insulin Doses:</p>

                                    <label for="insulin_dose_value"></label>
                                    <input class="data_entry" id="white" type="text" name="insulin_dose_value" value="{{insulin_value}}" style="{{insulin_colour}}" {{insulin_readonly}} pattern="[0-9]+"></input>
                                    
                                    {{!-- <p class="data_entry_label" id="subheading">Optional record</p> --}}
                                    <p class="data_entry_label" id="subheading">{{insulin_subheading}}</p>
                                </div>     
                            </div>

                            <div class="outer_block_text_column" id="data_grid">
                                <div class="data_grid">
                                    <p class="data_comment_label">Add comments for insulin doses</p>

                                    <label for="insulin_dose_comment"></label>
                                    <input class="data_comment" type="text" name="insulin_dose_comment" value="{{insulin_comment}}" {{insulin_readonly}}></input>
                                </div>
                                
                            </div>

                            <div class="outer_block_text_column" id="data_grid">
                                <div class="data_grid">
                                    <p class="data_entry_label">Daily Steps:</p>

                                    <label for="daily_steps_value"></label>
                                    <input class="data_entry" id="white" type="text" name="daily_steps_value"  value="{{exercise_value}}" style="{{exercise_colour}}" {{exercise_readonly}} pattern="[0-9]+"></input>

                                    {{!-- <p class="data_entry_label" id="subheading">Optional record</p> --}}
                                    <p class="data_entry_label" id="subheading">{{exercise_subheading}}</p>
                                </div>
                            </div>

                            <div class="outer_block_text_column" id="data_grid">
                                <div class="data_grid">
                                    <p class="data_comment_label">Add comments for daily steps</p>

                                    <label for="daily_steps_comment"></label>
                                    <input class="data_comment" type="text" name="daily_steps_comment" value="{{exercise_comment}}" {{exercise_readonly}}></input>
                                </div>
                            </div>
                        </div>
                        
                        <div class="data_entry_button_grid">
                            <div class="outer_block_text_column" id="cancel_button">
                                {{!-- Note that type="button" is required as the default behavior for a button is to submit the form, not what we want! --}}
                                <button class="default_button grey" id="data_button" type="button"  onclick="patientRedirectHomeNoAction()">Cancel</button>
                            </div>
                            
                            <div class="outer_block_text_column" id="submit_button">
                                <input type="submit" value="Submit" class="default_button dark_blue" id="data_button">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{{/with}}
